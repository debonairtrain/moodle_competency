<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<link rel="stylesheet" href="theme/competency/styles/only.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<div class="row">
    <div class="col-md-4">
      <div class="col-md-12">
        <h1 style="text-align:center;">Best</h1>
      </div>
      <div class="col-md-12">
        <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
      </div>
    </div>
    <div class="col-md-4">
      <div class="col-md-12">
        <h1  style="text-align:center;">Worst</h1>
      </div>
      <div class="col-md-12">
        <canvas id="myChart2" style="width:100%;max-width:600px"></canvas>
      </div>
    </div>
    <div class="col-md-4">
      <div class="col-md-12">
        <h1 class="text-center">Competency Path</h1>
        <center><h3>{{{courses_com}}}</h3></center>
      </div>
      <div class="col-md-12">
        <div class="container-fluid">

          <br><br>
  <div class="progress" style="height:50px">
    <div class="progress-bar progress-bar-success" role="progressbar" style="width:{{{competence1}}}%">
       {{{competency}}} <br>
       {{{compet3}}}
    </div>
    <div class="progress-bar progress-bar-warning" role="progressbar" style="width:{{{competence2}}}%">
     {{{competency}}} <br>
      {{{compet}}}
    </div>
    <div class="progress-bar progress-bar-danger" role="progressbar" style="width:{{{competence3}}}%">
      {{{competency}}} <br>
      {{{compet2}}}
    </div>
  </div>
</div>
      </div>
    </div>
</div>
  <hr>
<script>
var xValues = ["Best", "Worst"];
var yValues = [{{{maximum}}}, {{{minimum}}}];
var barColors = [
  "#00aba9",
  "#b91d47"
];

new Chart("myChart", {
  type: "pie",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    title: {
      display: true,
      text: "{{{coursename}}}"
    }
  }
});


var xValues = ["Worst", "Best"];
var yValues = [{{{maximum_score}}}, {{{minimum_score}}}];
var barColors = [
  "#b91d47",
  "#00aba9"
];

new Chart("myChart2", {
  type: "pie",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    title: {
      display: true,
      text: "{{{coursename2}}}"
    }
  }
});
</script>
